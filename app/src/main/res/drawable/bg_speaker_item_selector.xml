<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <selector android:enterFadeDuration="500" android:exitFadeDuration="500" >
            <item android:state_pressed="true" android:drawable="@drawable/bg_speaker_item_pressed"/>
            <item android:drawable="@drawable/bg_speaker_item_focused"/>
        </selector>
    </item>

    <item android:state_selected="true"
          android:drawable="@drawable/bg_speaker_item_focused"/>

    <item android:drawable="@drawable/bg_speaker_item_normal"/>


</selector>