<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:background="@drawable/bg_speaker_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

  <ImageView
    android:id="@+id/atp_cursor_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:src="@drawable/atp_cursor" />

  <TextView
    android:id="@+id/atp_speaker_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="4"
    android:gravity="center_vertical"
    android:text="SPK-00"
    android:textColor="@color/atp_normal_title" />

  <TextView android:id="@+id/atp_speaker_positon"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_weight="2"
    android:text="SL" />

</LinearLayout>
