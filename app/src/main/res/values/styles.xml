<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="baidu_auth_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_auth</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="ongo_process_dialog" parent="@android:style/Theme.Dialog">
        <!-- 是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!-- 是否在悬浮Activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题-->
        <item name="windowNoTitle">true</item>
        <!-- 窗口背景透明-->
        <item name="android:windowBackground">@drawable/bg_process</item>
        <!-- dimEnabled值为false，那弹出的对话框背景是亮的-->
        <!-- dimEnabled值为true，搭配dimAmount属性使用，可以控制对话框背景的亮暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 取值 0-1 可使用浮点数值：0.618 值越大背景越暗-->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ongo_notification_dialog" parent="@android:style/Theme.Dialog">
        <!-- 是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!-- 是否在悬浮Activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题-->
        <item name="windowNoTitle">true</item>
        <!-- 窗口背景透明-->
        <item name="android:windowBackground">@drawable/bg_notification</item>
        <!-- dimEnabled值为false，那弹出的对话框背景是亮的-->
        <!-- dimEnabled值为true，搭配dimAmount属性使用，可以控制对话框背景的亮暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 取值 0-1 可使用浮点数值：0.618 值越大背景越暗-->
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

</resources>
